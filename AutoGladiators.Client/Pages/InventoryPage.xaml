<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoGladiators.Client.Pages.SimulationPage"
             Title="Simulation">

    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Label Text="Simulation Results" FontAttributes="Bold" FontSize="24" />
            <Button Text="Run Simulation" Clicked="OnRunSimulationClicked" />
            <Label x:Name="WinnerLabel" FontAttributes="Bold" FontSize="18" />
            <Label x:Name="OutcomeLabel" FontSize="16" />

            <Label Text="Battle Log:" FontAttributes="Bold" FontSize="18" Margin="0,10,0,0"/>
            <Label x:Name="BattleLogLabel" FontSize="14" />

            <Label Text="Stats Summary:" FontAttributes="Bold" FontSize="18" Margin="0,20,0,0"/>
            <Label x:Name="StatsSummaryLabel" FontSize="14" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
