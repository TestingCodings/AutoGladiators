<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoGladiators.Client.Pages.MainMenuPage"
             Title="AutoGladiators"
             BackgroundColor="#0A0A0F">
    
    <ScrollView>
        <Grid RowDefinitions="Auto,*,Auto" Padding="20">
            
            <!-- Header Section -->
            <StackLayout Grid.Row="0" Spacing="10" Margin="0,20,0,40">
                <Label Text="⚔️ AUTOGLADIATORS" 
                       FontSize="32" 
                       FontAttributes="Bold"
                       TextColor="#FFD700"
                       HorizontalTextAlignment="Center"/>
                <Label Text="Battle • Collect • Conquer" 
                       FontSize="16" 
                       TextColor="#B0B0B0"
                       HorizontalTextAlignment="Center"/>
            </StackLayout>
            
            <!-- Main Menu Cards -->
            <StackLayout Grid.Row="1" Spacing="15">
                
                <!-- New Game Card -->
                <Frame BackgroundColor="#1A1A2E" 
                       CornerRadius="12" 
                       HasShadow="True"
                       Padding="0">
                    <Button Text="🆕 NEW GAME" 
                            FontSize="18" 
                            FontAttributes="Bold"
                            TextColor="#00FF88"
                            BackgroundColor="Transparent"
                            HeightRequest="60"
                            Clicked="OnNewGameClicked"/>
                </Frame>
                
                <!-- Continue Game Card -->
                <Frame BackgroundColor="#1A1A2E" 
                       CornerRadius="12" 
                       HasShadow="True"
                       Padding="0">
                    <Button Text="📁 CONTINUE GAME" 
                            FontSize="18" 
                            FontAttributes="Bold"
                            TextColor="#4A9EFF"
                            BackgroundColor="Transparent"
                            HeightRequest="60"
                            Clicked="OnContinueGameClicked"/>
                </Frame>
                
                <!-- Quick Play Adventure (for current profile) -->
                <Frame x:Name="QuickPlayFrame"
                       BackgroundColor="#1A1A2E" 
                       CornerRadius="12" 
                       HasShadow="True"
                       Padding="0"
                       IsVisible="False">
                    <Button x:Name="QuickPlayButton"
                            Text="🗺️ QUICK ADVENTURE" 
                            FontSize="18" 
                            FontAttributes="Bold"
                            TextColor="#FFD700"
                            BackgroundColor="Transparent"
                            HeightRequest="60"
                            Clicked="OnQuickAdventureClicked"/>
                </Frame>
                
            </StackLayout>
            
            <!-- Footer Section -->
            <StackLayout Grid.Row="2" Spacing="10" Margin="0,40,0,20">
                <!-- Current Profile Display -->
                <Frame x:Name="CurrentProfileFrame" 
                       BackgroundColor="#2A2A3E" 
                       CornerRadius="8" 
                       Padding="15"
                       IsVisible="False">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <Label Grid.Column="0" 
                               x:Name="ProfileInitialLabel"
                               Text="T"
                               FontSize="16" 
                               FontAttributes="Bold"
                               TextColor="#FFD700"
                               VerticalOptions="Center"/>
                        <StackLayout Grid.Column="1" Margin="10,0">
                            <Label x:Name="CurrentProfileLabel" 
                                   Text="Trainer Name - Level 1"
                                   FontSize="12" 
                                   TextColor="#FFFFFF"/>
                        </StackLayout>
                        <Button Grid.Column="2" 
                                Text="⚙️"
                                BackgroundColor="Transparent"
                                TextColor="#B0B0B0"
                                WidthRequest="30"
                                HeightRequest="30"
                                CornerRadius="15"
                                FontSize="12"
                                Clicked="OnProfileSettingsClicked"/>
                    </Grid>
                </Frame>
                
                <Button Text="🐛 Debug Menu" 
                        FontSize="14" 
                        TextColor="#B0B0B0"
                        BackgroundColor="#2A2A3E"
                        CornerRadius="8"
                        HeightRequest="45"
                        Clicked="OnDebugMenuClicked"/>
            </StackLayout>
            
        </Grid>
    </ScrollView>
    
</ContentPage>
