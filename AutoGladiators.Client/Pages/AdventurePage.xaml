<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoGladiators.Client.Pages.AdventurePage"
             Title="🏛️ Legacy Adventure Mode"
             BackgroundColor="#0A0A0F">
    
    <Grid RowDefinitions="Auto,*,Auto" Padding="15">
        
        <!-- Header Section -->
        <StackLayout Grid.Row="0" Spacing="8" Margin="0,10,0,15">
            <Label Text="🏛️ LEGACY ADVENTURE MODE" 
                   FontSize="24" 
                   FontAttributes="Bold"
                   TextColor="#FFD700"
                   HorizontalTextAlignment="Center"/>
            <Label x:Name="PlayerStatusLabel"
                   Text="📍 Simple location-based exploration | Try the new Open World mode from Main Menu!" 
                   FontSize="12" 
                   TextColor="#B0B0B0"
                   HorizontalTextAlignment="Center"/>
            <Label x:Name="LocationInfoLabel"
                   Text=" Current Location: Starting Area" 
                   FontSize="12" 
                   TextColor="#4A9EFF"
                   HorizontalTextAlignment="Center"/>
        </StackLayout>
        
        <!-- Interactive Map Grid -->
        <Frame Grid.Row="1" 
               BackgroundColor="#1A1A2E" 
               CornerRadius="15" 
               HasShadow="True"
               Padding="15"
               Margin="0,0,0,15">
            <StackLayout>
                <!-- Map Legend -->
                <Grid ColumnDefinitions="*,*,*,*" 
                      Margin="0,0,0,10">
                    <StackLayout Grid.Column="0" Orientation="Horizontal" Spacing="3">
                        <Label Text="" FontSize="14"/>
                        <Label Text="Scrap" FontSize="10" TextColor="#00FF88" VerticalOptions="Center"/>
                    </StackLayout>
                    <StackLayout Grid.Column="1" Orientation="Horizontal" Spacing="3">
                        <Label Text="" FontSize="14"/>
                        <Label Text="Electric" FontSize="10" TextColor="#FFD700" VerticalOptions="Center"/>
                    </StackLayout>
                    <StackLayout Grid.Column="2" Orientation="Horizontal" Spacing="3">
                        <Label Text="" FontSize="14"/>
                        <Label Text="Volcanic" FontSize="10" TextColor="#FF4757" VerticalOptions="Center"/>
                    </StackLayout>
                    <StackLayout Grid.Column="3" Orientation="Horizontal" Spacing="3">
                        <Label Text="" FontSize="14"/>
                        <Label Text="Crystal" FontSize="10" TextColor="#8B5CF6" VerticalOptions="Center"/>
                    </StackLayout>
                </Grid>
                
                <!-- 6x6 Interactive Map Grid -->
                <Grid x:Name="MapGrid" 
                      RowDefinitions="*,*,*,*,*,*"
                      ColumnDefinitions="*,*,*,*,*,*"
                      RowSpacing="3"
                      ColumnSpacing="3"
                      HeightRequest="300"
                      BackgroundColor="#0A0A0F"
                      Margin="0,10">
                    <!-- Map tiles will be generated in code-behind -->
                </Grid>
                
                <!-- Current Location Info -->
                <Frame BackgroundColor="#2A2A3E" 
                       CornerRadius="8" 
                       Padding="12" 
                       Margin="0,15,0,0">
                    <StackLayout>
                        <Label x:Name="CurrentLocationName"
                               Text=" Starting Area"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#FFD700"
                               HorizontalTextAlignment="Center"/>
                        <Label x:Name="CurrentLocationDescription"
                               Text="A safe zone where adventurers begin their journey."
                               FontSize="12"
                               TextColor="#B0B0B0"
                               HorizontalTextAlignment="Center"/>
                        <Button x:Name="ExploreButton"
                                Text=" Search This Area"
                                FontSize="14"
                                FontAttributes="Bold"
                                BackgroundColor="#4A9EFF"
                                TextColor="White"
                                CornerRadius="8"
                                HeightRequest="40"
                                Margin="0,8,0,0"
                                Clicked="OnExploreCurrentLocationClicked"/>
                    </StackLayout>
                </Frame>
            </StackLayout>
        </Frame>
        
        <!-- Quick Actions -->
        <Grid Grid.Row="2" 
              ColumnDefinitions="*,*" 
              ColumnSpacing="10">
            <Button Grid.Column="0"
                    Text=" Return to Base" 
                    FontSize="14" 
                    TextColor="#B0B0B0"
                    BackgroundColor="#2A2A3E"
                    CornerRadius="8"
                    HeightRequest="40"
                    Clicked="OnReturnToBaseClicked"/>
            <Button Grid.Column="1"
                    Text=" Travel Log" 
                    FontSize="14" 
                    TextColor="#B0B0B0"
                    BackgroundColor="#2A2A3E"
                    CornerRadius="8"
                    HeightRequest="40"
                    Clicked="OnViewTravelLogClicked"/>
        </Grid>
    </Grid>
</ContentPage>
