<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoGladiators.Client.Pages.AdventurePage"
             Title="Adventure"
             BackgroundColor="#0A0A0F">
    
    <ScrollView>
        <Grid RowDefinitions="Auto,*,Auto" Padding="20">
            
            <!-- Header Section -->
            <StackLayout Grid.Row="0" Spacing="10" Margin="0,20,0,30">
                <Label Text="🗺️ ADVENTURE" 
                       FontSize="28" 
                       FontAttributes="Bold"
                       TextColor="#FFD700"
                       HorizontalTextAlignment="Center"/>
                <Label x:Name="PlayerStatusLabel"
                       Text="Preparing for adventure..." 
                       FontSize="14" 
                       TextColor="#B0B0B0"
                       HorizontalTextAlignment="Center"/>
            </StackLayout>
            
            <!-- Adventure Locations -->
            <StackLayout Grid.Row="1" Spacing="20">
                
                <!-- Scrap Yards Location -->
                <Frame BackgroundColor="#1A1A2E" 
                       CornerRadius="15" 
                       HasShadow="True"
                       Padding="20">
                    <Grid ColumnDefinitions="*,Auto">
                        <StackLayout Grid.Column="0" Spacing="8">
                            <Label Text="🏭 SCRAP YARDS" 
                                   FontSize="20" 
                                   FontAttributes="Bold"
                                   TextColor="#B0B0B0"/>
                            <Label Text="Abandoned industrial zone filled with mechanical debris. Perfect hunting ground for rookie bots."
                                   FontSize="13"
                                   TextColor="#808080"
                                   LineBreakMode="WordWrap"/>
                            <Label Text="Difficulty: ★ Easy | Rewards: 💰 Low" 
                                   FontSize="12" 
                                   TextColor="#00FF88"/>
                        </StackLayout>
                        <Button Grid.Column="1"
                                Text="EXPLORE" 
                                FontSize="14" 
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="#00FF88"
                                CornerRadius="8"
                                WidthRequest="80"
                                HeightRequest="40"
                                VerticalOptions="Center"
                                Clicked="OnExploreScrapYardsClicked"/>
                    </Grid>
                </Frame>
                
                <!-- Electric Wastes Location -->
                <Frame BackgroundColor="#1A1A2E" 
                       CornerRadius="15" 
                       HasShadow="True"
                       Padding="20">
                    <Grid ColumnDefinitions="*,Auto">
                        <StackLayout Grid.Column="0" Spacing="8">
                            <Label Text="⚡ ELECTRIC WASTES" 
                                   FontSize="20" 
                                   FontAttributes="Bold"
                                   TextColor="#FFD700"/>
                            <Label Text="Crackling energy fields where electric bots roam. Static charges boost electric-type encounters."
                                   FontSize="13"
                                   TextColor="#808080"
                                   LineBreakMode="WordWrap"/>
                            <Label Text="Difficulty: ★★ Medium | Rewards: 💰 Medium" 
                                   FontSize="12" 
                                   TextColor="#FFD700"/>
                        </StackLayout>
                        <Button Grid.Column="1"
                                Text="EXPLORE" 
                                FontSize="14" 
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="#FFD700"
                                CornerRadius="8"
                                WidthRequest="80"
                                HeightRequest="40"
                                VerticalOptions="Center"
                                Clicked="OnExploreElectricWastesClicked"/>
                    </Grid>
                </Frame>
                
                <!-- Volcanic Depths Location -->
                <Frame BackgroundColor="#1A1A2E" 
                       CornerRadius="15" 
                       HasShadow="True"
                       Padding="20">
                    <Grid ColumnDefinitions="*,Auto">
                        <StackLayout Grid.Column="0" Spacing="8">
                            <Label Text="🌋 VOLCANIC DEPTHS" 
                                   FontSize="20" 
                                   FontAttributes="Bold"
                                   TextColor="#FF4757"/>
                            <Label Text="Dangerous lava caves where fire bots forge their strength. High risk, high reward territory."
                                   FontSize="13"
                                   TextColor="#808080"
                                   LineBreakMode="WordWrap"/>
                            <Label Text="Difficulty: ★★★ Hard | Rewards: 💰 High" 
                                   FontSize="12" 
                                   TextColor="#FF4757"/>
                        </StackLayout>
                        <Button Grid.Column="1"
                                Text="EXPLORE" 
                                FontSize="14" 
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="#FF4757"
                                CornerRadius="8"
                                WidthRequest="80"
                                HeightRequest="40"
                                VerticalOptions="Center"
                                Clicked="OnExploreVolcanicDepthsClicked"/>
                    </Grid>
                </Frame>
                
                <!-- Crystal Caverns Location -->
                <Frame BackgroundColor="#1A1A2E" 
                       CornerRadius="15" 
                       HasShadow="True"
                       Padding="20">
                    <Grid ColumnDefinitions="*,Auto">
                        <StackLayout Grid.Column="0" Spacing="8">
                            <Label Text="🔮 CRYSTAL CAVERNS" 
                                   FontSize="20" 
                                   FontAttributes="Bold"
                                   TextColor="#8B5CF6"/>
                            <Label Text="Mysterious underground chambers filled with rare ice and metal bots. Legendary encounters possible."
                                   FontSize="13"
                                   TextColor="#808080"
                                   LineBreakMode="WordWrap"/>
                            <Label Text="Difficulty: ★★★★ Extreme | Rewards: 💰 Legendary" 
                                   FontSize="12" 
                                   TextColor="#8B5CF6"/>
                        </StackLayout>
                        <Button Grid.Column="1"
                                Text="EXPLORE" 
                                FontSize="14" 
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="#8B5CF6"
                                CornerRadius="8"
                                WidthRequest="80"
                                HeightRequest="40"
                                VerticalOptions="Center"
                                Clicked="OnExploreCrystalCavernsClicked"/>
                    </Grid>
                </Frame>
                
            </StackLayout>
            
            <!-- Footer Actions -->
            <StackLayout Grid.Row="2" Spacing="10" Margin="0,30,0,20">
                <Button Text="🏠 Return to Base" 
                        FontSize="16" 
                        TextColor="#B0B0B0"
                        BackgroundColor="#2A2A3E"
                        CornerRadius="8"
                        HeightRequest="45"
                        Clicked="OnReturnToBaseClicked"/>
            </StackLayout>
            
        </Grid>
    </ScrollView>
    
</ContentPage>
