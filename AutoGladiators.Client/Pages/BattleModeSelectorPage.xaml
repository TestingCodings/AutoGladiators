<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoGladiators.Client.Pages.BattleModeSelectorPage"
             Title="Battle Arena"
             BackgroundColor="#0A0A0F">
    
    <ScrollView>
        <Grid RowDefinitions="Auto,*,Auto" Padding="20">
            
            <!-- Header Section -->
            <StackLayout Grid.Row="0" Spacing="10" Margin="0,20,0,40">
                <Label Text="âš”ï¸ BATTLE ARENA" 
                       FontSize="28" 
                       FontAttributes="Bold"
                       TextColor="#FFD700"
                       HorizontalTextAlignment="Center"/>
                <Label Text="Choose Your Battle Mode" 
                       FontSize="16" 
                       TextColor="#B0B0B0"
                       HorizontalTextAlignment="Center"/>
            </StackLayout>
            
            <!-- Battle Mode Cards -->
            <StackLayout Grid.Row="1" Spacing="20">
                
                <!-- Quick Battle Card -->
                <Frame BackgroundColor="#1A1A2E" 
                       CornerRadius="12" 
                       HasShadow="True"
                       Padding="20">
                    <StackLayout Spacing="10">
                        <Label Text="âš¡ QUICK BATTLE" 
                               FontSize="20" 
                               FontAttributes="Bold"
                               TextColor="#FF4757"/>
                        <Label Text="Jump straight into battle with a random opponent. Perfect for testing your bots!"
                               FontSize="14"
                               TextColor="#B0B0B0"
                               LineBreakMode="WordWrap"/>
                        <Button Text="START QUICK BATTLE" 
                                FontSize="16" 
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="#FF4757"
                                CornerRadius="8"
                                HeightRequest="50"
                                Clicked="OnQuickBattleClicked"/>
                    </StackLayout>
                </Frame>
                
                <!-- Tournament Card -->
                <Frame BackgroundColor="#1A1A2E" 
                       CornerRadius="12" 
                       HasShadow="True"
                       Padding="20">
                    <StackLayout Spacing="10">
                        <Label Text="ðŸ† TOURNAMENT" 
                               FontSize="20" 
                               FontAttributes="Bold"
                               TextColor="#FFD700"/>
                        <Label Text="Face multiple opponents in succession. Higher rewards for consecutive wins!"
                               FontSize="14"
                               TextColor="#B0B0B0"
                               LineBreakMode="WordWrap"/>
                        <Button Text="ENTER TOURNAMENT" 
                                FontSize="16" 
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="#FFD700"
                                CornerRadius="8"
                                HeightRequest="50"
                                Clicked="OnTournamentClicked"/>
                    </StackLayout>
                </Frame>
                
                <!-- Custom Battle Card -->
                <Frame BackgroundColor="#1A1A2E" 
                       CornerRadius="12" 
                       HasShadow="True"
                       Padding="20">
                    <StackLayout Spacing="10">
                        <Label Text="ðŸŽ¯ CUSTOM BATTLE" 
                               FontSize="20" 
                               FontAttributes="Bold"
                               TextColor="#4A9EFF"/>
                        <Label Text="Set up a custom battle with specific opponents, rules, and conditions."
                               FontSize="14"
                               TextColor="#B0B0B0"
                               LineBreakMode="WordWrap"/>
                        <Button Text="SETUP CUSTOM BATTLE" 
                                FontSize="16" 
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="#4A9EFF"
                                CornerRadius="8"
                                HeightRequest="50"
                                Clicked="OnCustomBattleClicked"/>
                    </StackLayout>
                </Frame>
                
            </StackLayout>
            
            <!-- Footer -->
            <Button Grid.Row="2" 
                    Text="â† Back to Main Menu" 
                    FontSize="16" 
                    TextColor="#B0B0B0"
                    BackgroundColor="#2A2A3E"
                    CornerRadius="8"
                    HeightRequest="45"
                    Margin="0,40,0,20"
                    Clicked="OnBackClicked"/>
            
        </Grid>
    </ScrollView>
    
</ContentPage>