<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoGladiators.Client.Pages.NPCDialoguePage"
             Title="Dialogue"
             BackgroundColor="#0d0d0d">

    <StackLayout Padding="20" VerticalOptions="CenterAndExpand" Spacing="25">

        <Frame BackgroundColor="#2a2a2a" CornerRadius="10" Padding="20">
            <Label x:Name="NPCTextLabel" FontSize="18" TextColor="White" />
        </Frame>

        <StackLayout>
            <Button Text="Next" Clicked="OnNextDialogueClicked" />
            <Button Text="End Conversation" Clicked="OnEndConversationClicked" />
        </StackLayout>
    </StackLayout>
</ContentPage>
