<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:AutoGladiators.Client.Converters"
             x:Class="AutoGladiators.Client.App">
    
    <Application.Resources>
        <ResourceDictionary>
            <!-- Battle Converters -->
            <converters:PercentageToDecimalConverter x:Key="PercentageToDecimalConverter" />
            <converters:IsGreaterThanZeroConverter x:Key="IsGreaterThanZeroConverter" />
            <converters:MoveAvailabilityConverter x:Key="MoveAvailabilityConverter" />
            <converters:BoolToOpacityConverter x:Key="BoolToOpacityConverter" />
            <converters:MoveTierToColorConverter x:Key="MoveTierToColorConverter" />
            
            <!-- HP Progress Converter (existing) -->
            <converters:HpProgressConverter x:Key="HpProgressConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>