<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoGladiators.Client.MainPage"
             BackgroundColor="Black">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">

            <Label Text="AutoGladiators Robot Builder"
                   FontSize="24"
                   TextColor="White"
                   HorizontalOptions="Center" />

            <Label Text="Select Physical Skills:"
                   FontAttributes="Bold"
                   TextColor="LightGray" />
            <StackLayout x:Name="PhysicalSkillsLayout" />

            <Label Text="Select Weaponry Skills:"
                   FontAttributes="Bold"
                   TextColor="LightGray" />
            <StackLayout x:Name="WeaponrySkillsLayout" />

            <Label Text="Bot Stats Preview:" FontAttributes="Bold" TextColor="LightGray" />
            <Label x:Name="StatsLabel"
                   TextColor="White"
                   FontSize="14"
                   FontAttributes="Italic" />

            <Button Text="Run Simulation"
                    BackgroundColor="Green"
                    TextColor="White"
                    Clicked="RunSimulation_Clicked" />
        </StackLayout>
    </ScrollView>
</ContentPage>
