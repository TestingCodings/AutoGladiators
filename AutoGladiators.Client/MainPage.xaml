<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoGladiators.Client.Pages.MainPage"
             Title="AutoGladiators - Home">
    <VerticalStackLayout Padding="20">
        <Label Text="Welcome to AutoGladiators!" FontSize="24" HorizontalOptions="Center" />
        <Button Text="Start Simulation" Clicked="OnStartSimulationClicked" />
        <Button Text="View Bots" Clicked="OnViewBotsClicked" />
        <Button Text="Settings" Clicked="OnSettingsClicked" />
    </VerticalStackLayout>
</ContentPage>