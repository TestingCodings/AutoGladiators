<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.cortexa.autogladiators">
    
    <!-- Permissions for file system access -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    
    <!-- For Android 11+ scoped storage -->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
    
    <application android:label="AutoGladiators" 
                 android:theme="@style/Maui.SplashTheme"
                 android:requestLegacyExternalStorage="true">
        <!-- MAUI will automatically handle the MainActivity definition -->
    </application>
</manifest>
